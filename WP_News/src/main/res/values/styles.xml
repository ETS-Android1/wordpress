<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/activeTabColor</item>
        <item name="colorControlHighlight">#ced7db</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/d_colorPrimary</item>
        <item name="colorPrimaryDark">@color/d_colorPrimaryDark</item>
        <item name="colorAccent">@color/d_activeTabColor</item>
        <item name="colorControlHighlight">#80474747</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources><!-- -->