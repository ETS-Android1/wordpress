<?xml version="1.0" encoding="utf-8"?><!-- -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/d_background"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/d_colorPrimary"
        android:elevation="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="?actionBarSize">

        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/d_color" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:layout_marginLeft="10dp"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/d_toolbarTextColor" />

        <TextView
            android:id="@+id/title_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/back"
            android:clickable="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|right"
            android:marqueeRepeatLimit="-1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/d_toolbarTextColor"
            android:textSize="16dp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <View
                    android:id="@+id/fake"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fake"
                    android:adjustViewBounds="true" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="تاریخ: امروز"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/date"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="نویسنده: عباس قاسمی"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <WebView
                    android:id="@+id/contextWeb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/author"
                    android:layout_marginTop="10dp" />

                <WebView
                    android:id="@+id/web"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/author"
                    android:layout_marginTop="10dp"
                    android:visibility="gone" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/color"
            android:elevation="3dp"
            android:padding="5dp"
            android:visibility="visible" />

    </FrameLayout>
</RelativeLayout>